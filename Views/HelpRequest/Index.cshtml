@using System.Web
@model DemandViewModel

<form asp-action="Index" method="post" enctype="multipart/form-data">
    <div class="container rounded bg-white mb-5">
        <div class="row">
            <div class="col-lg-12 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Yardım Talep Eden Kişi Detayları</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label class="labels">User Name</label>
                            <input type="text" class="form-control" value="@ViewBag.UserName" readonly>
                        </div>
                        <div class="col-6">
                            <label class="labels">Department Name</label>
                            <input type="text" class="form-control" value="@ViewBag.DepartmentName" readonly>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label class="labels" for="textInput">Text</label>
                            <input id="textInput" type="text" class="form-control" value="@ViewBag.Text" readonly>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Status" class="form-label">Status</label>
                                <select class="form-control" id="Status" name="Status">
                                    <option value="">-- Seçiniz --</option>
                                    <option value="ok">Çözüldü</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mt-5 text-center">
                        <button class="btn btn-primary profile-button" type="submit">Güncelle</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#textInput').tooltip({
            title: decodeURIComponent('@Html.Raw(HttpUtility.JavaScriptStringEncode(ViewBag.Text))'),
            placement: 'right'
        });
    });
</script>