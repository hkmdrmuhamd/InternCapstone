<div class="container mt-0">
    @if (ViewBag.ShowNewTaskMessage != null && ViewBag.ShowNewTaskMessage != false)
    {
        <div class="alert alert-info" role="alert">
            <span class="badge badge-pill badge-danger" style="color: red;">Yeni!</span>
            Yeni bir işiniz var!
            <a href="@Url.Action("Index", "HelpRequest")" class="alert-link">Detaylar için tıklayın.</a>
        </div>
    }


    <div class="row">
        <div class="col-md-6">
            <h1 class="display-2" style="margin-top: 50px;">İyi günler @ViewData["FullName"]</h1>
            <p class="lead">Hoş geldiniz, @ViewData["FullName"]! Yardım talebinde bulunmak için ilgili yerde tıklayın.
            </p>
        </div>
        <div class="col-md-6">
            <img src="/img/homelogo.png" class="img-fluid rounded" alt="Görsel">
        </div>
    </div>
</div>
