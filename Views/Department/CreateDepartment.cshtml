@model DepartmentViewModel

<form asp-action="CreateDepartment" method="post">
    <div class="container">
        <h2>Create Department</h2>
        <div class="form-group">
            <label asp-for="DepartmentName" class="control-label"></label>
            <input asp-for="DepartmentName" class="form-control" />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>

        <h3>SubDivisions</h3>
        <div id="subDivisions">
            <div class="subDivision">
                <div class="form-group">
                    <label class="control-label">SubDivision Name</label>
                    <input name="SubDivisions[0].SubDivisionName" class="form-control" />
                </div>
            </div>
        </div>

        <button id="addSubDivision" type="button" class="btn btn-primary">Add SubDivision</button>

        <button type="submit" class="btn btn-success">Create</button>
    </div>
</form>

@section Scripts {
    <script>
        var counter = 1;
        $("#addSubDivision").click(function () {
            var newSubDivision = $("#subDivisions .subDivision").first().clone();
            newSubDivision.find("input").val('');
            newSubDivision.find("input").attr("name", "SubDivisions[" + counter + "].SubDivisionName");
            $("#subDivisions").append(newSubDivision);
            counter++;
        });
    </script>
}
