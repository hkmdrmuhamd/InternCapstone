@model AppUser

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Profile</h1>
    </div>

    <section class="section profile">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body pt-0">
                        <ul class="nav nav-tabs nav-tabs-bordered">

                            <li class="nav-item">
                                <button class="nav-link active" data-bs-toggle="tab"
                                    data-bs-target="#profile-overview">Overview</button>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-action="ChangePassword"
                                    asp-route-id="@Model.Id" type="button">Change Password</a>
                            </li>
                        </ul>
                        <div class="tab-content pt-2">

                            <h5 class="card-title">Profile Details</h5>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label ">Full Name:</div>
                                <div class="col-lg-9 col-md-8">@Model.FullName</div>
                            </div>

                            <hr class="mt-0 mb-0">

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">User Name:</div>
                                <div class="col-lg-9 col-md-8">@Model.UserName</div>
                            </div>

                            <hr class="mt-0 mb-0">

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Email:</div>
                                <div class="col-lg-9 col-md-8">@Model.Email</div>
                            </div>

                            <hr class="mt-0 mb-0">

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Department:</div>
                                @if (Model.Department == null)
                                {
                                    <div class="col-lg-9 col-md-8">ROLE ADMÄ°N</div>
                                }
                                else
                                {
                                    <div class="col-lg-9 col-md-8">@Model.Department</div>
                                }
                            </div>

                            <hr class="mt-0 mb-0">

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">SubDivision:</div>
                                @if (Model.SubDivision == null)
                                {
                                    <div class="col-lg-3 col-md-4 label">ROLE ADMIN</div>
                                }
                                else
                                {
                                    <div class="col-lg-3 col-md-4 label">@Model.SubDivision</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
</main>
