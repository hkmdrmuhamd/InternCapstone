@model AppUser

<div class="container rounded bg-white mb-5">
    <div class="row">
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels">Full Name</label>
                        <input type="text" class="form-control" value="@Model.FullName" readonly>
                    </div>
                    <div class="col-6">
                        <label class="labels">User Name</label>
                        <input type="text" class="form-control" value="@Model.UserName" readonly>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels">Email</label>
                        <input type="text" class="form-control" value="@Model.Email" readonly>
                    </div>
                    <div class="col-6">
                        <label class="labels">Department</label>
                        @if (Model.Department == null)
                        {
                            <input type="text" class="form-control" value="ROLE ADMIN" readonly>
                        }
                        else
                        {
                            <input type="text" class="form-control" value="@Model.Department" readonly>
                        }
                    </div>
                    <div class="col-12 mt-2">
                        <label class="labels">SubDivision</label>
                        @if (Model.SubDivision == null)
                        {
                            <input type="text" class="form-control" value="ROLE ADMIN" readonly>
                        }
                        else
                        {
                            <input type="text" class="form-control" value="@Model.SubDivision" readonly>
                        }
                    </div>
                </div>
                <div class="mt-3 d-flex justify-content-between">
                    <a class="btn btn-danger profile-button" asp-action="ChangePassword" asp-route-id="@Model.Id"
                        type="button">Change Password</a>
                </div>
            </div>
        </div>
    </div>
</div>
