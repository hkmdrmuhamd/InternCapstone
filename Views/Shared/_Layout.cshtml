@if (TempData["message"] != null)
{
    <div class="alert alert-warning">
        @TempData["Message"]
    </div>
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InternCapstone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InternCapstone.styles.css" asp-append-version="true" />
    <link rel="apple-touch-icon" href="/docs/5.3/assets/img/favicons/apple-touch-icon.png" sizes="180x180">
    <link rel="icon" href="/docs/5.3/assets/img/favicons/favicon-32x32.png" sizes="32x32" type="image/png">
    <link rel="icon" href="/docs/5.3/assets/img/favicons/favicon-16x16.png" sizes="16x16" type="image/png">
    <link rel="mask-icon" href="/docs/5.3/assets/img/favicons/safari-pinned-tab.svg" color="#712cf9">
    <link rel="icon" href="/docs/5.3/assets/img/favicons/favicon.ico">
    <meta name="theme-color" content="#712cf9">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css"
        rel="stylesheet">
    <style>
        body {
            font-family: "Arial", sans-serif;
            transition: margin-left .5s;
        }

        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: -250px;
            background-color: #111;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

        .sidebar a {
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 25px;
            color: #818181;
            display: block;
            transition: 0.3s;
        }

        .sidebar a:hover {
            color: #f1f1f1;
        }

        .openbtn {
            font-size: 20px;
            cursor: pointer;
            background-color: #111;
            color: white;
            padding: 10px 15px;
            border: none;
            position: absolute;
            top: 20px;
            left: 20px;
            transition: transform .3s;
        }

        #main {
            padding: 16px;
            margin-left: 0;
        }

        .openbtn.open {
            transform: translateX(250px);
        }

        .nav-item.active {
            background-color: blue;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

            .sidebar a {
                font-size: 18px;
            }
        }
    </style>
</head>

<body>
    <header>
        <div id="sidebar" class="sidebar">
            <ul class="nav flex-column">
                <li>
                    <a href="/home/index" class="nav-link active" aria-current="page">
                        <svg class="bi pe-none me-2" width="16" height="16">
                            <use xlink:href="#home" />
                        </svg>
                        Home
                    </a>
                </li>
                @if (User.Identity!.IsAuthenticated)
                {
                    <li>
                        <a asp-controller="Demand" asp-action="Index" class="nav-link link-body-emphasis">
                            <svg class="bi pe-none me-2" width="16" height="16">
                                <use xlink:href="#envelope-plus" />
                            </svg>
                            Submit Request
                        </a>
                    </li>
                }
                @if (User.Identity!.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <li>
                        <a asp-controller="ViewRecords" asp-action="Index" class="nav-link link-body-emphasis">
                            <svg class="bi pe-none me-2" width="16" height="16">
                                <use xlink:href="#people-circle" />
                            </svg>
                            View Records
                        </a>
                    </li>
                }
            </ul>
            <hr>
            <div class="dropdown">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a href="#" class="d-flex align-items-center link-body-emphasis text-decoration-none dropdown-toggle"
                        data-bs-toggle="dropdown" aria-expanded="false">

                        <strong>@User.Identity.Name</strong>
                    </a>
                    <ul class="dropdown-menu text-small shadow">
                        <li><a class="dropdown-item" asp-controller="Users" asp-action="Index"
                                asp-route-username="@User.Identity.Name">Profile</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="SignUp">User Register</a>
                            </li>
                        }
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    </ul>
                }
                else
                {
                    <a href="#" class="d-flex align-items-center link-body-emphasis text-decoration-none dropdown-toggle"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <strong>Sign-in</strong>
                    </a>
                    <ul class="dropdown-menu text-small shadow">
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="SignIn">Sign-in</a></li>
                    </ul>
                }
            </div>
        </div>

        <div id="main">
            <button class="btn btn-secondary" onclick="toggleSidebar()">
                <i class="bi bi-list"></i>
            </button>
            <main role="main">
                <div class="row">
                    <div class="col">
                        @RenderBody()
                    </div>
                </div>
            </main>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script>
            function toggleSidebar() {
                var sidebar = document.getElementById("sidebar");
                var main = document.getElementById("main");
                var button = document.querySelector(".openbtn");

                if (sidebar.style.left === "0px") {
                    sidebar.style.left = "-250px";
                    main.style.marginLeft = "0";
                    button.classList.remove("open");
                } else {
                    sidebar.style.left = "0px";
                    main.style.marginLeft = "250px";
                    button.classList.add("open");
                }
            }
        </script>
    </header>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>

</html>
