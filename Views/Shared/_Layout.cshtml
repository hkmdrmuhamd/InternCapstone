<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InternCapstone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InternCapstone.styles.css" asp-append-version="true" />
    <link rel="apple-touch-icon" href="/docs/5.3/assets/img/favicons/apple-touch-icon.png" sizes="180x180">
    <link rel="icon" href="/docs/5.3/assets/img/favicons/favicon-32x32.png" sizes="32x32" type="image/png">
    <link rel="icon" href="/docs/5.3/assets/img/favicons/favicon-16x16.png" sizes="16x16" type="image/png">
    <link rel="mask-icon" href="/docs/5.3/assets/img/favicons/safari-pinned-tab.svg" color="#712cf9">
    <link rel="icon" href="/docs/5.3/assets/img/favicons/favicon.ico">
    <meta name="theme-color" content="#712cf9">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css"
        rel="stylesheet">
    <style>
        body {
            font-family: "Arial", sans-serif;
            transition: margin-left .5s;
        }

        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            z-index: 1050;
            top: 0;
            left: -250px;
            background-color: #111;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

        .sidebar a {
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 25px;
            color: #818181;
            display: block;
            transition: 0.3s;
        }

        .sidebar a:hover {
            color: #f1f1f1;
        }


        #main {
            padding: 80px 16px 16px 16px;
            margin-left: 0;
            transition: margin-left .5s;
        }

        .openbtn {
            font-size: 20px;
            cursor: pointer;
            background-color: #111;
            color: white;
            padding: 10px 15px;
            border: none;
            position: absolute;
            top: 20px;
            left: 20px;
            transition: transform .3s;
            z-index: 1060;
        }

        .openbtn.open {
            transform: translateX(250px);
        }

        .nav-item.active {
            background-color: blue;
        }

        .navbar {
            z-index: 1070;
        }

        .navbar {
            position: fixed;
            width: 100%;
            transition: left .5s;
        }

        .navbar.sidebar-opened {
            left: 250px;
        }

        @@mediascreenand (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

            .sidebar a {
                font-size: 18px;
            }
        }
    </style>

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">InternCapstone</a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/home/index">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <button class="openbtn" type="button" onclick="toggleSidebar()">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="sidebar" class="sidebar">
            <ul class="nav flex-column">
                @if (TempData["message"] != null)
                {
                    <li>
                        <div class="alert alert-warning">
                            @TempData["Message"]
                        </div>
                    </li>
                }
                <li>
                    <a href="/home/index" class="nav-link active" aria-current="page">
                        <i class="bi bi-house"></i>
                        Home
                    </a>
                </li>
                @if (User.Identity!.IsAuthenticated)
                {
                    <li>
                        <a asp-controller="Demand" asp-action="Index" class="nav-link link-body-emphasis">
                            <i class="bi bi-question-octagon"></i>
                            Submit Request
                        </a>
                    </li>
                }
                @if (User.Identity!.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <li>
                        <a asp-controller="ViewRecords" asp-action="Index" class="nav-link link-body-emphasis">
                            <i class="bi bi-person-lines-fill"></i>
                            View Records
                        </a>
                    </li>
                }
                @if (User.Identity!.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <li>
                        <a asp-controller="Department" asp-action="CreateDepartment" class="nav-link link-body-emphasis">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                class="bi bi-building-down" viewBox="0 0 16 16">
                                <path
                                    d="M12.5 9a3.5 3.5 0 1 1 0 7 3.5 3.5 0 0 1 0-7m.354 5.854 1.5-1.5a.5.5 0 0 0-.708-.708l-.646.647V10.5a.5.5 0 0 0-1 0v2.793l-.646-.647a.5.5 0 0 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0" />
                                <path
                                    d="M2 1a1 1 0 0 1 1-1h10a1 1 0 0 1 1 1v6.5a.5.5 0 0 1-1 0V1H3v14h3v-2.5a.5.5 0 0 1 .5-.5H8v4H3a1 1 0 0 1-1-1z" />
                                <path
                                    d="M4.5 2a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm3 0a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm3 0a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm-6 3a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm3 0a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm3 0a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm-6 3a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm3 0a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5z" />
                            </svg>
                            Add Department
                        </a>
                    </li>
                }
            </ul>
            <hr>
            <div class="dropdown">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a href="#" class="d-flex align-items-center link-body-emphasis text-decoration-none dropdown-toggle"
                        data-bs-toggle="dropdown" aria-expanded="false">

                        <strong>@User.Identity.Name</strong>
                    </a>
                    <ul class="dropdown-menu text-small shadow">
                        <li><a class="dropdown-item" asp-controller="Users" asp-action="Index"
                                asp-route-username="@User.Identity.Name">Profile</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="SignUp">User Register</a>
                            </li>
                        }
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    </ul>
                }
                else
                {
                    <a href="#" class="d-flex align-items-center link-body-emphasis text-decoration-none dropdown-toggle"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <strong>Sign-in</strong>
                    </a>
                    <ul class="dropdown-menu text-small shadow">
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="SignIn">Sign-in</a></li>
                    </ul>
                }
            </div>
        </div>

        <div id="main">
            <main role="main">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </main>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script>
            $(document).ready(function () {
                toggleSidebar();
            });

            function toggleSidebar() {
                var sidebar = document.getElementById("sidebar");
                var navbar = document.querySelector(".navbar");
                var button = document.querySelector(".openbtn");
                var main = document.getElementById("main");

                if (sidebar.style.left === "0px") {
                    sidebar.style.left = "-250px";
                    navbar.classList.remove("sidebar-opened");
                    button.classList.remove("open");
                    main.style.marginLeft = "0";
                } else {
                    sidebar.style.left = "0px";
                    navbar.classList.add("sidebar-opened");
                    button.classList.add("open");
                    main.style.marginLeft = "250px";
                }
            }
        </script>
    </header>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>